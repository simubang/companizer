RewriteEngine on
DirectoryIndex /content/index.php
RewriteRule ^home$ $1content/index.php [L]
RewriteRule ^profil$ $1content/profil.php [L]
RewriteRule ^kontakt$ $1content/kontakt.php [L]
RewriteRule ^hilfe$ $1content/hilfe.php [L]
RewriteRule ^spenden$ $1content/spenden.php [L]
RewriteRule ^registrieren$ $1content/registrieren.php [L]
ErrorDocument 400 /400.html
ErrorDocument 401 /401.html
ErrorDocument 403 /403.html
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
ErrorDocument 502 /502.html
ErrorDocument 504 /504.html





